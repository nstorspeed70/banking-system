{
  "name": "sistema-bancario",
  "version": "1.0.0",
  "description": "Sistema bancario empresarial con Clean Architecture, DDD y CQRS",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "./scripts/pruebas-integracion.sh",
    "test:api": "jest tests/integration/api --setupFiles ./tests/setup.js",
    "test:db": "jest tests/integration/db --setupFiles ./tests/setup.js",
    "test:auth": "jest tests/integration/auth --setupFiles ./tests/setup.js",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.768.0",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "2.3.1",
    "@nestjs/core": "^8.4.7",
    "@nestjs/cqrs": "^8.0.4",
    "@nestjs/platform-express": "8.4.7",
    "@nestjs/swagger": "5.2.1",
    "@nestjs/typeorm": "8.1.4",
    "@types/pg": "^8.11.11",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.8",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.7",
    "@types/aws-sdk": "2.7.0",
    "@types/express": "4.17.17",
    "@types/jest": "27.5.2",
    "@types/node": "^16.18.38",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.8.3",
    "dotenv": "^16.4.7",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.7.0",
    "pg": "^8.14.1",
    "prettier": "2.8.8",
    "source-map-support": "^0.5.20",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.7.4",
    "uuid": "^11.1.0"
  }
}
